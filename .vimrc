" Retain buffers until quit
set hidden
" No bells!
set visualbell
" Fast scrolling
set ttyfast
" Line numbers are nice
set ruler
" Always show status
set laststatus=2
" scrolling
set mouse=a
" Use spaces instead of tabs
set expandtab
" Be smart when using tabs ;)
set autoindent
set smarttab
" 1 tab == 2 spaces
set shiftwidth=2
set tabstop=2
" Line numbering
set relativenumber
set number
" Always show statusline
set laststatus=2
syntax enable
set tabstop=4
filetype on
inoremap kj <Esc>
set t_Co=256

set autochdir
"change directory open command
filetype plugin indent on

set encoding=utf-8
set t_Co=256
set termencoding=utf-8
let g:solarized_termcolors=256
set fileformat=unix
set hlsearch
